---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const activeProjects = allProjects.filter(p => p.data.status === 'active');

function getCategoryName(category: string): string {
  const categories: Record<string, string> = {
    'children': 'Дети',
    'education': 'Образование',
    'health': 'Здоровье',
    'social': 'Социальные',
    'other': 'Другое'
  };
  return categories[category] || category;
}

function formatAmount(amount: number): string {
  return new Intl.NumberFormat('ru-RU').format(amount);
}
---

<BaseLayout title="Проекты">
    <section class="section" style="padding-top: 3rem;">
        <div class="container">
            <h1 class="text-center text-burgundy mb-2">
                <i class="fas fa-project-diagram"></i>
                Наши проекты
            </h1>
            <p class="text-center" style="max-width: 800px; margin: 0 auto 3rem; font-size: 1.1rem;">
                Фонд «Время Человека» поддерживает инициативы, направленные на укрепление 
                нравственных ценностей, продвижение трезвого образа жизни и заботу о детях.
            </p>

            <!-- Фильтры -->
            <div class="floating-card" style="margin-bottom: 3rem;">
                <h3 style="margin-bottom: 1rem;">
                    <i class="fas fa-filter"></i> Фильтры
                </h3>
                <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                    <button class="btn btn-outline filter-btn active" data-category="all">Все категории</button>
                    <button class="btn btn-outline filter-btn" data-category="social">Социальные</button>
                    <button class="btn btn-outline filter-btn" data-category="children">Дети</button>
                    <button class="btn btn-outline filter-btn" data-category="education">Образование</button>
                    <button class="btn btn-outline filter-btn" data-category="health">Здоровье</button>
                </div>
            </div>

            <!-- Список проектов -->
            <div class="projects-grid" id="projects-list">
                {activeProjects.map((project) => {
                    const { data } = project;
                    const progress = data.targetAmount ? (data.collectedAmount / data.targetAmount * 100).toFixed(1) : 0;
                    
                    return (
                        <div class="project-card" data-category={data.category}>
                            <img src={data.imageUrl} alt={data.title} class="project-image" />
                            <div class="project-content">
                                <span class="project-category">{getCategoryName(data.category)}</span>
                                <h3 class="project-title">{data.title}</h3>
                                <p class="project-description">{data.shortDescription}</p>
                                
                                {data.targetAmount && (
                                    <>
                                        <div class="project-stats">
                                            <div class="stat-item">
                                                <span class="stat-label">Собрано</span>
                                                <span class="stat-value">{formatAmount(data.collectedAmount)} ₽</span>
                                            </div>
                                            <div class="stat-item">
                                                <span class="stat-label">Цель</span>
                                                <span class="stat-value">{formatAmount(data.targetAmount)} ₽</span>
                                            </div>
                                        </div>
                                        <div class="progress-bar">
                                            <div class="progress-fill" style={`width: ${progress}%`}></div>
                                        </div>
                                    </>
                                )}
                                
                                <div style="display: flex; gap: 0.5rem;">
                                    <a href={`/projects/${data.slug}`} class="btn btn-outline" style="flex: 1; padding: 0.75rem;">
                                        Подробнее
                                    </a>
                                    <a href={`/projects/${data.slug}#donate`} class="btn btn-primary" style="flex: 1; padding: 0.75rem;">
                                        Помочь
                                    </a>
                                </div>
                            </div>
                        </div>
                    );
                })}
            </div>
        </div>
    </section>

    <script>
        // Фильтрация проектов
        document.addEventListener('DOMContentLoaded', () => {
            const filterButtons = document.querySelectorAll('.filter-btn');
            const projectCards = document.querySelectorAll('.project-card');
            
            filterButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const category = button.getAttribute('data-category');
                    
                    // Обновляем активную кнопку
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    
                    // Фильтруем карточки
                    projectCards.forEach(card => {
                        if (category === 'all' || card.getAttribute('data-category') === category) {
                            card.style.display = '';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            });
        });
    </script>

    <style>
        .filter-btn.active {
            background: var(--primary-red);
            color: white;
            border-color: var(--primary-red);
        }
    </style>
</BaseLayout>